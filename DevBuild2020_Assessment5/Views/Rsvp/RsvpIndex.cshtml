@model RsvpForm

@{
    ViewData["Title"] = "RSVP";
}

<h1>RSVP</h1>

@{
    if (ViewData["errorMsg"] != null)
    {
        <p><strong>@ViewData["errorMsg"]</strong></p>
    }
}

<form asp-controller="Rsvp" asp-action="Add" method="post">
    <div class="form-group">
        @Html.LabelFor(m => m.FirstName, new { @class = "control-label" }):
        @Html.EditorFor(m => m.FirstName, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div>
        @Html.LabelFor(m => m.LastName):
        @Html.EditorFor(m => m.LastName, new { htmlAttributes = new { @class = "form-control" } })
        <br />
    </div>
    <div>
        @Html.LabelFor(m => m.EmailAddress):
        @Html.EditorFor(m => m.EmailAddress, new { htmlAttributes = new { @class = "form-control" } })
        @*<input asp-for="Email" />*@
        <br />
    </div>
    <div>
        @Html.LabelFor(m => m.Attending, new { @class = "control-label" }):
        @Html.RadioButtonFor(m => m.Attending, "yes", new { htmlAttributes = new { @class = "form-control" } }) Yes
        @Html.RadioButtonFor(m => m.Attending, "no", new { htmlAttributes = new { @class = "form-control" } }) No
        <br />

    </div>
    <div>
        @Html.LabelFor(m => m.AttendanceDate, new { @class = "control-label" }):
        @Html.RadioButtonFor(m => m.AttendanceDate, "20200417", new { htmlAttributes = new { @class = "form-control" } }) April 17th
        @Html.RadioButtonFor(m => m.AttendanceDate, "20200417", new { htmlAttributes = new { @class = "form-control" } }) April 18th
        <br />

    </div>
    @*<div>
            <label for="attending">
                <input id="attending" value="yes" type="radio" />YES!
            </label>
            <label for="attending">
                <input id="attending" value="no" type="radio" />No
            </label>
        </div>*@
    <div>
        @Html.LabelFor(m => m.Guest, new { @class = "control-label" }):
        @Html.EditorFor(m => m.Guest, new { htmlAttributes = new { @class = "form-control" } })

    </div>
    <div>
        @*<input type="submit" value="REGISTER" />*@
        <button type="submit" class="btn btn-primary">Register</button>
    </div>
</form>
